{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@next/next/recommended"
  ],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreComments": true,
        "ignoreStrings": true
      }
    ],
    "no-var": "error",
    "prefer-const": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "array-callback-return": "error",
    "camelcase": "error",
    "eqeqeq": "error",
    "func-name-matching": "error",
    "no-iterator": "error"
  }
}